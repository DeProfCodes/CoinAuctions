@{
    ViewData["Title"] = "Home";
}

<div>
    <section id="banner">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <p class="heading-text"> Welcome to the auction </p>
                    <p class="body-text">Your trusted p2p coin community. Get 100% of the coins you have purchased from the members. This is a pure peer to peer network, Client's pay each other without their money going through the admin acounts.</p>
                    <a type="button" class="btn btn-primary" asp-controller="Users" asp-action="Login"> Bid now</a>
                </div>
            </div>
        </div>
    </section>

    <section id="steps">
        <div class="container">
            <div class=" row text-center">
                <div class="col-md-4 steps">
                    <img src="~/images/icon3.png" class="icon-3.png">
                    <h4>Bid & gain</h4>
                    <p>See available coins & buy in few clicks</p>
                </div>
                <div class="col-md-4 steps">
                    <img src="~/images/icon1.png" class="icon-1.png">
                    <h4>Make payment</h4>
                    <p>Make payment to the other peer's account</p>
                </div>
                <div class="col-md-4 steps">
                    <img src="~/images/icon1.png" class="icon-1.png">
                    <h4>Your gains</h4>
                    <p>Make payment to the other peer's account</p>
                </div>
            </div>
        </div>
    </section>
</div>